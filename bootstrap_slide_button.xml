<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        
		<com.beardedhen.androidbootstrap.FontAwesomeText
		    android:id="@+id/fontawesome_hide_left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:textColor="@color/white"
			bootstrap:fa_icon="fa-trash-o" />
	    
		<View 
		    android:layout_width="0dp"
		    android:layout_height="1dp"
		    android:layout_weight="1"/>
		
		<com.beardedhen.androidbootstrap.FontAwesomeText
		    android:id="@+id/fontawesome_hide_right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:textColor="@color/white"
			bootstrap:fa_icon="fa-trash-o" />
        
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/slide_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
    
		<com.beardedhen.androidbootstrap.FontAwesomeText
		    android:id="@+id/fontawesome_left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			bootstrap:fa_icon="fa-angle-double-left" />
		
	    <TextView 
		    android:id="@+id/textview_left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxLines="1"
			android:textColor="@color/white" />
	
	    <TextView 
		    android:id="@+id/textview_center"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:maxLines="1"
	        android:layout_weight="1" 
			android:textColor="@color/white"/>
	    
	    <TextView 
		    android:id="@+id/textview_right"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxLines="1"
			android:textColor="@color/white"/>
	    
		<com.beardedhen.androidbootstrap.FontAwesomeText
		    android:id="@+id/fontawesome_right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			bootstrap:fa_icon="fa-angle-double-right" />
    
    </LinearLayout>
	
</FrameLayout>
